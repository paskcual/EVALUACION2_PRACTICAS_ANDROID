<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imvImagen"
                android:layout_width="205dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="278dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblNombreE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE" />

                <TextView
                    android:id="@+id/lblDescripcionE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPCION" />

                <TextView
                    android:id="@+id/lblDireccionTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIRECCIONYTELEFONO" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="138dp"
                android:layout_height="82dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lblRaiting1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    app:srcCompat="@drawable/estrellallena" />

                <ImageView
                    android:id="@+id/lblRaiting2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    app:srcCompat="@drawable/estrellavacia" />

                <ImageView
                    android:id="@+id/lblRaiting3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="50dp"
                    android:maxWidth="50dp"
                    app:srcCompat="@drawable/estrellavacia" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>